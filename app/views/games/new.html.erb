<% @letters.each do |letter| %>
  <div class="btn btn-primary btn-lg">
    <p><%= letter %></p>
  </div>
<% end %>
<p>Whats the longest word you can find</p>

<form action="/score" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="submit" value="Play" type="button" class="btn btn-warning btn-lg">
</form>
